{
  "name": "Windsurf",
  "description": "Codeium's AI-powered code editor with native MCP support",
  "status": "✅ Fully Supported",
  "protocol": "MCP (STDIO)",
  "configFile": {
    "windows": "%APPDATA%\\Windsurf\\mcp.json",
    "mac": "~/.windsurf/mcp.json",
    "linux": "~/.windsurf/mcp.json"
  },
  "prerequisites": [
    "Install Windsurf from https://codeium.com/windsurf",
    "No additional extensions needed - MCP built-in"
  ],
  "configuration": {
    "mcpServers": {
      "brave-real-browser": {
        "command": "npx",
        "args": ["-y", "brave-real-browser-mcp-server@latest"]
      }
    }
  },
  "alternativeConfiguration": {
    "withCustomBravePath": {
      "mcpServers": {
        "brave-real-browser": {
          "command": "npx",
          "args": ["-y", "brave-real-browser-mcp-server@latest"],
          "env": {
            "BRAVE_PATH": "C:\\Program Files\\BraveSoftware\\Brave-Browser\\Application\\brave.exe"
          }
        }
      }
    },
    "withLocalInstallation": {
      "mcpServers": {
        "brave-real-browser": {
          "command": "brave-real-browser-mcp-server"
        }
      }
    },
    "withMultipleServers": {
      "mcpServers": {
        "brave-real-browser": {
          "command": "npx",
          "args": ["-y", "brave-real-browser-mcp-server@latest"]
        },
        "other-mcp-server": {
          "command": "npx",
          "args": ["-y", "other-server@latest"]
        }
      }
    }
  },
  "setupSteps": [
    "1. Close Windsurf completely",
    "2. Press Win+R and type: %APPDATA%\\Windsurf",
    "3. Create or open 'mcp.json' file",
