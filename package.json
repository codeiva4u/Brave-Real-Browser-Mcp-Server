{
  "name": "brave-real-browser-mcp-server",
  "version": "2.14.13",
  "description": "Universal AI IDE MCP Server - Auto-detects and supports all AI IDEs (Claude Desktop, Cursor, Windsurf, Cline, Zed, VSCode, Qoder AI, etc.) with Brave browser automation",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "preinstall": "npm view brave-real-puppeteer-core version > .latest-version 2>&1 || echo 'Version check skipped'",
    "postinstall": "node scripts/patch-puppeteer-screen-recorder.cjs && node scripts/update-to-latest.cjs || echo 'Auto-update skipped'",
    "clean": "rimraf dist",
    "clean:cache": "npm cache clean --force",
    "fix-cache-permissions": "echo 'Run: sudo chown -R $(whoami):$(id -gn) ~/.npm' && echo 'This fixes npm cache permission issues'",
    "clean:modules": "rm -rf node_modules",
    "clean:all": "npm run clean:modules && npm run clean:cache && npm run clean",
    "fresh-install": "npm run clean:all && npm install",
    "fresh-start": "npm run fresh-install && npm run build && npm start",
    "fresh-dev": "npm run fresh-install && npm run build && npm run dev",
    "prebuild": "npm run clean",
    "build": "tsc",
    "rebuild": "npm run clean && npm run build",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest run --coverage",
    "test:unit": "vitest run src",
    "test:integration": "vitest run test/integration",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:e2e:watch": "vitest --config vitest.e2e.config.ts",
    "test:visual": "vitest run test/e2e/visual-browser.test.ts",
    "test:visual:watch": "vitest test/e2e/visual-browser.test.ts",
    "test:brave:cleanup": "taskkill /F /IM brave.exe || pkill -f brave || true"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "@types/turndown": "^5.0.6",
    "ajv": "^8.12.0",
    "axios": "^1.6.5",
    "brave-real-browser": "^1.5.105",
    "brave-real-launcher": "^1.2.29",
    "brave-real-puppeteer-core": "^24.33.0-patch.1",
    "compromise": "^14.13.0",
    "dotenv": "^17.2.3",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0",
    "puppeteer-screen-recorder": "^3.0.6",
    "tesseract.js": "^5.0.5",
    "turndown": "^7.2.2"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "rimraf": "^6.1.2",
    "tsx": "latest",
    "typescript": "^5.5.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "mcp",
    "puppeteer",
    "browser-automation",
    "claude-desktop",
    "cursor-ai",
    "windsurf",
    "cline",
    "zed-editor",
    "vscode",
    "qoder-ai",
    "warp-terminal",
    "roo-coder",
    "continue-dev",
    "github-copilot",
    "cody",
    "tabnine",
    "ai-ide",
    "universal-adapter",
    "auto-detection",
    "multi-protocol",
    "lsp",
    "websocket",
    "brave-browser",
    "web-scraping",
    "captcha-solver"
  ],
  "author": "withlinda13",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/withLinda/brave-real-browser-mcp-server.git"
  },
  "homepage": "https://github.com/withLinda/brave-real-browser-mcp-server",
  "bugs": {
    "url": "https://github.com/withLinda/brave-real-browser-mcp-server/issues"
  },
  "bin": {
    "brave-real-browser-mcp-server": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "scripts/**/*",
    ".npmrc",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "preferGlobal": true,
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "resolutions": {
    "puppeteer": "npm:brave-real-puppeteer-core@latest",
    "puppeteer-core": "npm:brave-real-puppeteer-core@latest",
    "**/puppeteer": "npm:brave-real-puppeteer-core@latest",
    "**/puppeteer-core": "npm:brave-real-puppeteer-core@latest"
  },
  "overrides": {
    "puppeteer": "npm:brave-real-puppeteer-core@latest",
    "puppeteer-core": "npm:brave-real-puppeteer-core@latest",
    "puppeteer-screen-recorder": {
      "puppeteer": "npm:brave-real-puppeteer-core@latest",
      "puppeteer-core": "npm:brave-real-puppeteer-core@latest",
      "fluent-ffmpeg": "latest",
      "glob": "latest",
      "rimraf": "latest"
    },
    "brave-real-browser": {
      "puppeteer": "npm:brave-real-puppeteer-core@latest",
      "puppeteer-core": "npm:brave-real-puppeteer-core@latest"
    },
    "tesseract.js": {
      "puppeteer": "npm:brave-real-puppeteer-core@latest",
      "puppeteer-core": "npm:brave-real-puppeteer-core@latest"
    },
    "*": {
      "puppeteer": "npm:brave-real-puppeteer-core@latest",
      "puppeteer-core": "npm:brave-real-puppeteer-core@latest"
    },
    "fluent-ffmpeg": "latest",
    "glob": "latest",
    "inflight": "latest",
    "tar-fs": "latest"
  }
}
