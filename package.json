{
  "name": "brave-real-browser-mcp-server",
  "version": "2.41.5",
  "description": "MCP Server for Brave Real Browser - Puppeteer with Brave Browser, Stealth Mode, Ad Blocker, and Turnstile Auto-Solver for undetectable web automation.",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.mjs",
  "type": "commonjs",
  "workspaces": [
    "packages/brave-real-blocker",
    "packages/brave-real-launcher",
    "packages/brave-real-puppeteer-core"
  ],
  "exports": {
    ".": {
      "types": "./typings.d.ts",
      "import": "./lib/esm/index.mjs",
      "require": "./lib/cjs/index.js"
    }
  },
  "typings": "typings.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "brave": "./src/index.js",
    "brave-mcp": "./dist/index.js",
    "brave-lsp": "./src/lsp/index.js"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "node src/index.js",
    "mcp": "node src/index.js mcp",
    "mcp:verbose": "node src/index.js mcp --verbose",
    "lsp": "node src/index.js lsp",
    "lsp:tcp": "node src/lsp/server.js --tcp",
    "list": "node src/index.js --list",
    "build": "echo 'Root package uses pre-built lib/ - no build needed'",
    "build:self": "echo 'Root package uses pre-built lib/ - no build needed'",
    "test": "npm run cjs_test && npm run esm_test",
    "esm_test": "node ./test/esm/test.js",
    "cjs_test": "node ./test/cjs/test.js",
    "lint": "echo 'No linting configured'",
    "build:all": "npm run build --workspaces --if-present",
    "clean:all": "npm run clean --workspaces --if-present",
    "test:all": "npm run test --workspaces --if-present",
    "postinstall": "node scripts/auto-update-deps.js || true",
    "update-deps": "node scripts/auto-update-deps.js",
    "upstream-patch": "node scripts/upstream-patcher.js"
  },
  "keywords": [
    "mcp-server",
    "model-context-protocol",
    "brave-browser",
    "puppeteer-fingerprint",
    "puppeteer-cloudflare",
    "undetectable-puppeteer",
    "undetect",
    "undetectable",
    "puppeteer-undetectable",
    "puppeteer-undetect",
    "puppeteer-undetectable-bypass",
    "puppeteer-undetect-bypass",
    "puppeteer-undetectable-cloudflare",
    "puppeteer-undetect-cloudflare",
    "puppeteer-undetectable-cf",
    "puppeteer-undetect-cf",
    "puppeteer-undetectable-cf-bypass",
    "anti-bot",
    "stealth",
    "cloudflare-bypass",
    "turnstile-solver"
  ],
  "author": "codeiva4u",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.3",
    "brave-real-puppeteer-core": "^24.37.1-brave.4",
    "ghost-cursor": "^1.4.2",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "tesseract.js": "^5.1.1",
    "tree-kill": "^1.2.2",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "xvfb": "^0.4.0"
  },
  "devDependencies": {
    "puppeteer-extra-plugin-adblocker": "^2.13.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codeiva4u/Brave-Real-Browser-Mcp-Server.git"
  },
  "bugs": {
    "url": "https://github.com/codeiva4u/Brave-Real-Browser-Mcp-Server/issues"
  },
  "homepage": "https://github.com/codeiva4u/Brave-Real-Browser-Mcp-Server",
  "readme": "README.md"
}