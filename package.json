{
  "name": "brave-real-browser-mcp-server",
  "version": "2.27.28",
  "description": "ðŸ¦ MCP server for Brave Real Browser - NPM Workspaces Monorepo with anti-detection features, SSE streaming, and LSP compatibility",
  "type": "module",
  "main": "dist/index.js",
  "workspaces": [
    "packages/brave-real-launcher",
    "packages/brave-real-puppeteer-core",
    "packages/brave-real-blocker",
    "packages/brave-real-browser"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "clean:modules": "rimraf node_modules packages/*/node_modules",
    "clean:all": "npm run clean:modules && npm run clean",
    "clean:deep": "node scripts/clean-all.js",
    "prebuild": "npm run clean",
    "build": "npm run build:deps && tsc",
    "build:deps": "node scripts/build-all.js",
    "build:self": "tsc",
    "rebuild": "npm run clean && npm run build",
    "start": "node dist/unified-server.js",
    "start:stdio": "node dist/index.js",
    "start:sse": "MCP_TRANSPORT=sse node dist/index.js",
    "start:http": "MCP_TRANSPORT=http-stream node dist/index.js",
    "dev": "tsx src/unified-server.ts",
    "dev:stdio": "tsx src/index.ts",
    "dev:sse": "MCP_TRANSPORT=sse tsx src/index.ts",
    "dev:http": "MCP_TRANSPORT=http-stream tsx src/index.ts",
    "start:lsp": "node dist/lsp/browser-automation-lsp.js",
    "dev:lsp": "tsx src/lsp/browser-automation-lsp.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest run --coverage",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:integration": "npx tsx test/integration/test-all-tools.ts",
    "publish-all": "node scripts/publish-all.js",
    "publish-all:dry": "node scripts/publish-all.js --dry-run",
    "prepare-publish": "node scripts/prepare-publish.js",
    "restore-workspace": "node scripts/restore-workspace.js",
    "version:patch": "node scripts/version-bump.js patch",
    "version:minor": "node scripts/version-bump.js minor",
    "version:major": "node scripts/version-bump.js major",
    "bootstrap": "npm install && npm run build:deps",
    "reset": "npm run clean:deep && npm run bootstrap"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "@types/turndown": "latest",
    "brave-real-browser": "*",
    "puppeteer-core": "^24.35.0",
    "turndown": "latest",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "peerDependencies": {
    "@modelcontextprotocol/sdk": "latest"
  },
  "devDependencies": {
    "@types/node": "latest",
    "@vitest/coverage-v8": "latest",
    "@vitest/ui": "latest",
    "rimraf": "latest",
    "tsx": "latest",
    "typescript": "latest",
    "vitest": "latest"
  },
  "keywords": [
    "mcp",
    "puppeteer",
    "browser-automation",
    "brave",
    "stealth",
    "monorepo"
  ],
  "author": "withlinda13",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/withLinda/Brave-Real-Browser-Mcp-Server.git"
  },
  "homepage": "https://github.com/withLinda/Brave-Real-Browser-Mcp-Server",
  "bugs": {
    "url": "https://github.com/withLinda/Brave-Real-Browser-Mcp-Server/issues"
  },
  "bin": {
    "brave-real-browser-mcp-server": "dist/index.js",
    "brave-browser-lsp": "dist/lsp/browser-automation-lsp.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ]
}
